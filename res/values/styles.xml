<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/background_actionbar</item>
        <item name="android:backgroundStacked">@color/background_actionbar</item>
        <item name="android:backgroundSplit">@color/background_actionbar</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TextListHeader" parent="@style/TextList">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextList" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">9.0dip</item>
        <item name="android:paddingRight">9.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextVersion" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:paddingBottom">24.0dip</item>
        <item name="android:shadowColor">#ff0099cc</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogoStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
    </style>

    <style name="ButtonTextStyle" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Material.Button.Borderless.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>